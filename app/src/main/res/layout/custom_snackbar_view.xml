<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_download_validity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_smallest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download_started"
            android:padding="@dimen/dp_16"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/btn_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_4"
            android:text="@string/download_open"
            android:textSize="@dimen/sp_14"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>

